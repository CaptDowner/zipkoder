<h1>Listing zips</h1>
  <%= form_tag zips_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Search", name: nil %>
      <!--   </div> -->
    </p>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>City</th>
        <th>State</th>
        <th>Code</th>
        <th>Zip</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @zips.each do |zip| %>
        <tr>
          <td><%= zip.city %></td>
          <td><%= zip.state %></td>
          <td align='center'><%= zip.state_2 %></td>
          <td><%= zip.zip %></td>
          <td><%= link_to 'Show', zip %></td>
          <td><%= link_to 'Edit', edit_zip_path(zip) %></td>
          <td><%= link_to 'Destroy', zip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <table class='pnation'>
    <tr>
      <td colspan='3'><%= paginate @zips %></td>
    </tr>
  </table>

<%= link_to 'New Zip', new_zip_path %>
